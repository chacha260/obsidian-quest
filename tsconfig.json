{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"types": ["node"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, 
	"exclude": [
		"node_modules",
		"test",
		"main.js",
		"esbuild.config.mjs"
	]
}